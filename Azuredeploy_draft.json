{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "defaultValue": "AIGamingCVApi",
      "metadata": {
        "description": "Display name of Computer Vision API account"
      },
      "type": "string"
    },
    "SKU": {
      "type": "string",
      "metadata": {
        "description": "SKU for Computer Vision API"
      },
      "defaultValue": "S1",
      "allowedValues": [
        "F0",
        "S1"
      ]
    },
    "cognitiveServicesLocation": {
      "metadata": {
        "description": "The location for the Computer Vision API"
      },
      "type": "string",
      "minLength": 1,
      "allowedValues": [
        "westeurope",
        "eastus2",
        "southeastasia",
        "centralus",
        "westus"
      ],
      "defaultValue": "westeurope"
    }
  },
  "variables": {

    "rgName":"AIGaming"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('cognitiveServicesLocation')]",
      "name": "[variables('rgName')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[variables('rgName')]",
      "apiVersion": "2018-05-01",
      "name":  "[concat(variables('rgName'),'-deploy')]",
      "dependsOn": [
        "tmpAIGaming"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "type": "Microsoft.CognitiveServices/accounts",
              "sku": {
                "name": "[parameters('SKU')]"
              },
              "kind": "ComputerVision",
              "name": "[parameters('accountName')]",
              "apiVersion": "2016-02-01-preview",
              "location": "[parameters('cognitiveServicesLocation')]",
              "properties": {}
            }
          ],
          "outputs": {
            
          }
        }
      }
    }
  ],
  "outputs": {
    
    
  }
